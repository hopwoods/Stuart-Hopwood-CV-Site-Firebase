rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {   
    match /{document=**} {
      allow read
      allow write: if isAdmin()
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.uid == "71H1j1a7AJWD7ILkApx4VsGGAiw2"
    }
  }
}